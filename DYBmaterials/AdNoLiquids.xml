
<!-- Replace liquids with nitrogen gas to simulate dry AD -->

<!-- Mineral Oil -->
<material	name="MineralOil" 
            density="1.251*gram/liter" 
            pressure="1.*atmosphere" 
            temperature="273.*kelvin">
  <component fractionmass="1.0" name="Nitrogen"/>
  <tabprops address="/dd/Materials/AirProperties/NitrogenAbsorptionLength"/>
  <tabprops address="/dd/Materials/AirProperties/NitrogenRefractionIndex"/>
</material>

